{
  "schema_version": "1.0.0",
  "language": "Aurora",
  "description": "Aurora Abstract Syntax Tree Schema - Frozen for MVP",
  "breaking_change_policy": "Schema changes that modify existing node types or remove fields are breaking changes and require a major version bump. Adding new optional fields or new node types are non-breaking.",
  "node_types": {
    "Program": {
      "description": "Root AST node representing a complete program or module",
      "fields": {
        "items": {"type": "Vec<ItemId>", "description": "Top-level item declarations"},
        "span": {"type": "Span", "description": "Source location spanning the entire program"}
      }
    },
    "Item": {
      "description": "Top-level declaration",
      "fields": {
        "kind": {"type": "ItemKind", "description": "The specific kind of item"},
        "span": {"type": "Span", "description": "Source location"}
      }
    },
    "Expr": {
      "description": "Expression node",
      "fields": {
        "kind": {"type": "ExprKind", "description": "The specific kind of expression"},
        "span": {"type": "Span", "description": "Source location"},
        "hygiene": {"type": "HygieneId", "description": "Hygiene context for macro expansion"}
      }
    },
    "Stmt": {
      "description": "Statement node",
      "fields": {
        "kind": {"type": "StmtKind", "description": "The specific kind of statement"},
        "span": {"type": "Span", "description": "Source location"}
      }
    },
    "Type": {
      "description": "Type node",
      "fields": {
        "kind": {"type": "TypeKind", "description": "The specific kind of type"},
        "span": {"type": "Span", "description": "Source location"}
      }
    },
    "Pattern": {
      "description": "Pattern node for destructuring and matching",
      "fields": {
        "kind": {"type": "PatternKind", "description": "The specific kind of pattern"},
        "span": {"type": "Span", "description": "Source location"}
      }
    }
  },
  "stability_guarantees": {
    "version": "1.0.0",
    "frozen_for": "MVP",
    "breaking_changes": "Require major version bump and migration guide"
  }
}
